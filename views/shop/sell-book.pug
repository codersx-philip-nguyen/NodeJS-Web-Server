extends ../layout/common
block content
  h1 Selling Book
  form(action="/admin/shop/sell-book" method="POST", enctype="multipart/form-data")
    .form-group
        label(for='title') Title
        input#title.form-control(name='title', type='text', values = values ? values.title : "")
    .form-group
        label(for='description') Description
        input#description.form-control(name='description', type='text')
    .form-group
        label(for="price") Price
        input#price.form-control-file(name='price', type='text')
    .form-group
        label(for='coverUrl') Cover Book
        input#coverUrl.form-control-file(name='coverUrl', type='file')
    button.btn.btn-primary Create