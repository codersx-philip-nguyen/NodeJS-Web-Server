extends ../layout/common
block content
  h1 Books
  form(action="/books/search" method="GET")
    .form-group
      input(type="text", name="q", value=question)
      button.btn.btn-primary.ml-1 Search
  a(href="/books/create") NewBook
  table.table
    tr
      th Title
      th Action
    each book in books
      tr
        td= book.title
        td
          a.btn.btn-light(href="/books/" + book.id + "/update") Edit
          a.btn.btn-light.ml-1(href="/books/" + book.id + "/delete") Delete
        

        